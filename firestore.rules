rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Profiles collection
    match /profiles/{userId} {
      // Anyone authenticated can read profiles (needed for admin check)
      allow read: if isAuthenticated();
      // Users can create their own profile
      allow create: if isOwner(userId);
      // Users can update their own profile
      allow update: if isOwner(userId);
      // Admins can update any profile (for toggling admin status)
      allow update: if isAuthenticated() && 
                       get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.is_admin == true;
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Anyone can read categories
      allow read: if true;
      // Authenticated users with is_admin can write
      allow create, update, delete: if isAuthenticated() && 
                                       get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.is_admin == true;
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      // Authenticated users with is_admin can write
      allow create, update, delete: if isAuthenticated() && 
                                       get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.is_admin == true;
    }
    
    // User-specific cart items
    match /users/{userId}/cart/{itemId} {
      allow read, write: if isOwner(userId);
    }
    
    // User-specific wishlist items
    match /users/{userId}/wishlist/{itemId} {
      allow read, write: if isOwner(userId);
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders, admins can read all
      allow read: if isAuthenticated();
      // Users can create orders
      allow create: if isAuthenticated();
      // Admins can update/delete orders
      allow update, delete: if isAuthenticated() && 
                               get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.is_admin == true;
    }
    
    // Coupons collection
    match /coupons/{couponId} {
      // Anyone can read coupons
      allow read: if true;
      // Admins can manage coupons
      allow create, update, delete: if isAuthenticated() && 
                                       get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.is_admin == true;
    }
    
    // Site settings collection
    match /site_settings/{settingId} {
      // Anyone can read site settings
      allow read: if true;
      // Admins can update site settings
      allow create, update, delete: if isAuthenticated() && 
                                       get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.is_admin == true;
    }
  }
}
